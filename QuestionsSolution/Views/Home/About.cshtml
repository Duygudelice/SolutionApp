@using QuestionsSolution.Models
@model List<About>
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout-Home.cshtml";
}

<section id="about" class="about section-bg">
    <div class="container">

        <div class="section-title">
            <h2>Hakkımızda</h2>
        </div>

        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-lg-12">
                    <div class="col-lg-6 order-1 order-lg-2" style="float: right; padding-left: 20px; padding-top: 30px;">
                        <img src="~/Content/Style/İmages/yenilogo-removebg-preview.png" class="img-fluid" width="100%" alt="SOLUTİONAPP">
                    </div>
                    <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content" style="float:left;">
                        <h4>@x.Title</h4>

                        @*<p class="fst-italic">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore
                                magna aliqua.
                            </p>*@
                        <p id="About" style="text-align: justify;">
                            @x.Explanation
                        </p>
                    </div>
                </div>
                <br />
                <br />
                <br />

            }
        </div>
        <br />
        <br />
</section><!-- End About Us Section -->

