@model QuestionsSolution.Models.Answer
@{
    ViewBag.Title = "GetAnswer";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Cevap Güncelle</h4>


            <form action="/Admin/UpdateAnswer" method="post" enctype="multipart/form-data">
                <label for="Id">Id</label>
                <br />
                <br />
                <input class="form-control" type="text" id="Id" readonly="readonly" name="ID" value="@Model.ID">
                <br />
                <label for="Id">Cevap Başlığı</label>
                <br />
                <br />
                <input class="form-control" type="text" id="TamirciAdı" name="AnswerName" value="@Model.AnswerName">
                <br />
                <label for="Name">Gönderen Adı</label>
                <br />
                <br />
                <input class="form-control" type="text" id="Tamirci_İl" name="Sender_Name" value="@Model.Sender_Name">
                <br />
                <label for="Name">Gönderen Soyadı</label>
                <br />
                <br />
                <input class="form-control" type="text" id="Tamirci_İl" name="Sender_Surname" value="@Model.Sender_Surname">
                <br />
                <br />

                <label for="PictureUrl">Gönderen Mail Adresi</label>
                <br />
                <br />
                <input class="form-control" type="text" id="TamirciMail" name="Sender_Mail" value="@Model.Sender_Mail"> <br />
                <br />
                <label for="Name">Cevap Puanı</label>
                <br />
                <br />
                <input class="form-control" type="number" id="Tamirci_İl" name="Answer_point" value="@Model.Answer_point">
                <br />
                <br />
                <label for="PictureUrl">Cevabın Ait Olduğu Soru</label>
                <br />
                <br />
                <input class="form-control" type="text" id="TamirciMail" value="@Model.question.QuestionName" readonly> <br />

                <label for="Active">Var Olan Cevap Aktifliği</label>
                <br />
                <br />
                @if (Model.Answer_active == true)
                {
                    <input class="form-control" type="text" readonly value="Aktif Cevap">
                }
                else
                {
                    <input class="form-control" type="text" readonly value="Pasif Cevap">
                }
                <br>
                @*@Html.TextBoxFor(x => x.Active, new { @class = "form-control" })*@
                <br />
                <label>Aktifliği Değiştiriniz</label>
                <br />
                <br />
                @Html.CheckBox("Check1")<span>Aktif</span>
                <br />
                <br />
                @Html.CheckBox("Check2")<span>Pasif</span>
                <br />
                <br />
                @*<label for="Active">Var Olan Cevap Onayı</label>
                <br />
                <br />
                @if (Model.Answer_approval == true)
                {
                    <input class="form-control" type="text" readonly value="Onaylı Soru">
                }
                else
                {
                    <input class="form-control" type="text" readonly value="Onaysız Cevap">
                }
                <br>*@

                <br />
                <label>Onay Durumunu Değiştiriniz</label>
                <br />
                <br />
                @Html.CheckBox("Check3")<span>Onaylı</span>
                <br />
                <br />
                @Html.CheckBox("Check4")<span>Onaysız</span>
                <br />
                <br />

                <br />
                <label for="PictureUrl">Cevap Açıklaması</label>
                <br />
                <br />
                <textarea class="form-control" id="Tamirci_Tanım" style="width:100%; height:200px;" name="Explanation">@Model.Explanation</textarea> <br />
                <br />
                <label for="PictureUrl">Cevap Var Olan Foroğraf</label>
                <br />
                <br />
                <img width="200" height="200" name="Answer_picture" alt="@Model.AnswerName" src="@Model.Answer_picture" />
                <br />
                <br />
                <label for="Answer_picture">Güncellemek için seçiniz.</label>
                <br />
                <input class="form-control" type="file" name="Answer_picture" />
                <br />
                <br />
                <button class="btn btn-outline-warning"><i class="mdi mdi-content-save"></i>&nbsp;&nbsp;Güncelle</button>
            </form>
            <br />
            <br />
        </div>
    </div>
</div>
