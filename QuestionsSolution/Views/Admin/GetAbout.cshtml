@model QuestionsSolution.Models.About
@{
    ViewBag.Title = "GetAbout";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<body onload="kapat()">
    @if (@TempData["Error"] != null)
    {
        <div id="dv1" class="alert alert-danger">
            <strong style="font-size:15px;">@TempData["Error"]</strong>
            @*<button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>*@
        </div>
    }
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımızda Yazısı Güncelle</h4>



                @using (Html.BeginForm("UpdateAbout", "Admin", FormMethod.Post))
                {
                    <label for="Vision">Id</label> <br />
                    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
                    <br />
                    <label for="Vision">Hakkımızda Yazısı Başlığı</label> <br />
                    @Html.TextAreaFor(x => x.Title, new { @class = "form-control", required = "required" })
                    <br />
                    <label for="Vision">Hakkımızda Yazısı</label> <br />
                    @Html.TextAreaFor(x => x.Explanation, new { @class = "form-control", style = "height:200px; resize:vertical;", required = "required" })
                    <br />
                    <br />
                    <button class="btn btn-outline-warning"><i class="mdi mdi-content-save"></i>&nbsp;&nbsp;Güncelle</button>
                }
                <br />
                <br />
            </div>
        </div>
    </div>
    </body>
<script>

    function kapat() {
        setTimeout("document.getElementById('dv1').style.display = 'none'", 3000);
    }

</script>