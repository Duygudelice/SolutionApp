@model QuestionsSolution.Models.Province
@{
    ViewBag.Title = "AddProvince";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<body onload="kapat()">
    @if (@TempData["Error"] != null)
    {
        <div id="dv1" class="alert alert-danger">
            <strong style="font-size:15px;">@TempData["Error"]</strong>
            @*<button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>*@
        </div>
    }
    <div class="col-lg-12 grid-margin stretch-card">

        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Yeni İl Ekle</h3>

                @using (Html.BeginForm("AddProvince", "Admin", FormMethod.Post))
                {
                    <label for="Baslik">İl Adı</label> <br />
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required" })
                    <br />
                    <button class="btn btn-outline-primary"><i class="mdi mdi-content-save"></i>&nbsp;&nbsp;Ekle</button>
                }

            </div>
        </div>
    </div>
</body>
<script>

    function kapat() {
        setTimeout("document.getElementById('dv1').style.display = 'none'", 3000);
    }

</script>
