@model QuestionsSolution.Models.District
@{
    ViewBag.Title = "GetDistrict";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<body onload="kapat()">
    @if (@TempData["Error"] != null)
    {
        <div id="dv1" class="alert alert-danger">
            <strong style="font-size:15px;">@TempData["Error"]</strong>
            @*<button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>*@
        </div>
    }
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İlçe Güncelle</h4>



                @using (Html.BeginForm("UpdateDistrict", "Admin", FormMethod.Post))
                {
                    <label for="Vision">Id</label> <br />
                    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
                    <br />
                    <label for="Vision">İlçe Adı</label> <br />
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required" })
                    <br />
                    @Html.Action("ProvinceList", "Admin")
                    <br />
                    <button class="btn btn-outline-warning"><i class="mdi mdi-content-save"></i>&nbsp;&nbsp;Güncelle</button>
                }
                <br />
                <br />
            </div>
        </div>
    </div>
    <script>

        function kapat() {
            setTimeout("document.getElementById('dv1').style.display = 'none'", 3000);
        }
        $(document).ready(function () {
            $("#provinceId").select2();
            $("#provinceId").change(function () {
                var id = $(this).val();
                console.log(id);
            });

        });

    </script>

