<body onload="kapat()">
    @if (@TempData["Error"] != null)
    {
        <div id="dv1" class="alert alert-danger">
            <strong style="font-size:15px;">@TempData["Error"]</strong>
            @*<button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>*@
        </div>
    }

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Yeni Hakkımızda Yazısı Ekle</h3>

                @using (Html.BeginForm("AddAbout", "Admin", FormMethod.Post))
                {
                    <label for="Baslik">Hakkımızda Yazısı Başlığı</label> <br />
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", required = "required" })
                    <br />
                    <label for="HakkımızdaYazısı">Hakkımızda Yazısı</label> <br />
                    @Html.TextAreaFor(x => x.Explanation, new { @class = "form-control", required = "required", style = "height:200px; resize:vertical;" })
                    <br />
                    <button class="btn btn-outline-primary"><i class="mdi mdi-content-save"></i>&nbsp;&nbsp;Ekle</button>
                }

            </div>
        </div>
    </div>
</body>
<script>

    function kapat() {
        setTimeout("document.getElementById('dv1').style.display = 'none'", 3000);
    }

</script>
