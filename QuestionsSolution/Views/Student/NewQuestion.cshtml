@model QuestionsSolution.Models.Question
@{
    ViewBag.Title = "NewQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="login grey">
    <div class="container">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Yeni Soru Ekle</h3>

                    <form id="contact" action="/Student/NewQuestion" method="post" enctype="multipart/form-data">
                        <label for="Name"> <label for="Baslik">Soru Başlığı</label> <br /></label> <br />
                        <div class="form-group mt-3">
                            <input type="text" class="form-control" name="QuestionName" id="subject" placeholder="Soru Başlığı" autofocus required>
                        </div>
                        <br />
                        <label for="Name">Soru Açıklaması</label> <br />
                        <div class="form-group mt-3">
                            <textarea class="form-control" name="Explanation" rows="7" minlength="20" maxlength="2000" placeholder="Soru Açıklaması" required></textarea>
                        </div>

                        <br />

                        <br />
                        <label for="Name">Soru Fotoğrafı Seçiniz.<b>(Zorunlu Değildir.)</b></label> <br />
                        <br />
                        <input class=" form-control" type="file" name="Questions_picture" />
                        <br />
                        <br />
                        @Html.Action("BranchList", "Admin")
                        @Html.Action("UrgencyList", "Admin")

                        <button class="btn btn-outline-primary"><i class="mdi mdi-content-save"></i>&nbsp;&nbsp;Ekle</button>
                    </form>

