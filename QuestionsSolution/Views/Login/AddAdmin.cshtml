@model QuestionsSolution.Models.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Yeni Admin Ekle</h3>

            <form class="form-group" method="post">
                <label for="Vision">Admin İsmi</label> <br />
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                <br />
                <label for="Vision">Admin Soyadı</label> <br />
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                <br />
                <label for="Mission">Admin Telefon</label> <br />
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                <br />
                <label for="AboutUs">Admin Mail</label> <br />
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                <br />
                <label for="Vision">Admin Kimlik Numarası</label> <br />
                @Html.TextBoxFor(x => x.IdentityNo, new { @class = "form-control" })
                <br />
                <label for="Vision">Admin Doğum Tarihi</label> <br />
                @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control", @type = "date" })
                <br />
                <label for="Vision">Admin Şifre</label> <br />
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
                <br />
                <br />
                <button class="btn btn-outline-primary"><i class="mdi mdi-content-save"></i>&nbsp;&nbsp;Ekle</button>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $("#kategori").select2();
        $("#ilid").select2();
        $("#ilçe").select2();
        $("#ilid").change(function () {
            var id = $(this).val();
            console.log(id);
            var ilçelist = $("#ilçe");
            ilçelist.empty();
            $.ajax({
                url: '/Tamirciler/GetInstitution/',
                type: 'POST',
                dataType: 'json',
                data: { 'id': id },
                success: function (data) {
                    $.each(data, function (index, option) {

                        ilçelist.append('<option value=' + data[index].Value + '>' + data[index].Text + '</option > ');
                    });
                    /* kurumlist.append('<option value=' + data[0].Value + '>' + data[0].Text + '</option > ');*/

                }
            });

        });
    });
</script>