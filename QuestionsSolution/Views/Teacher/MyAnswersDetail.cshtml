@using QuestionsSolution.Models
@model List<Answer>
@{
    ViewBag.Title = "MyAnswersDetail";
    Layout = "~/Views/Shared/_Layout - Teacher.cshtml";
}

<section class="single">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li><a href="~/Student/Index">Anasayfa</a></li>
                    <li class="active">Cevap Detayı</li>
                </ol>
                @foreach (var x in Model)
                {
                    <article class="article main-article">
                        <header>
                            <h1>@x.AnswerName</h1>
                            <ul class="details">
                                <li>Yayınlanma Tarihi @x.Answer_date</li>
                                <li>By <a href="#">@x.Sender_Name @x.Sender_Surname</a></li>
                            </ul>
                            <br />
                            @if (x.Answer_approval == true)
                            {
                                <div style="background-color:lightgreen;" class="col">
                                  Onaylanmış Cevap
                                </div>
                            }
                        </header>
                        <div class="main">
                            <p>@x.Explanation</p>
                            <div class="featured">
                                <figure>
                                    <img src="@x.Answer_picture">
                                    <figcaption>@x.AnswerName</figcaption>
                                </figure>
                            </div>

                            <footer>
                               
                                @*<div class="col">
                                    <a href="#" class="love"><i class="ion-android-done"></i> <div>@x.Click</div></a>
                                </div>*@
                            </footer>
                    </article>

                <br />
                <div class="line thin"></div>
                <div class="comments">
                    <h4 class="title">Cevabın Ait Olduğu Soru<a href="#"></a></h4>
                    <div class="comment-list">
                        
                            <div class="item">
                                <div class="user">
                                    <figure>
                                        <img src="~/Content/Style/İmages/anonim.png">
                                    </figure>
                                    <div class="details">
                                        <h5 class="name">@x.question.QuestionName - @x.question.branch.Name</h5>
                                        <div class="time">@x.question.Questions_date</div>
                                        <br />
                                        <div class="">
                                            <img style="width:97%; height:100%;" src="@x.question.Questions_picture">
                                            @*<figcaption>@x.AnswerName</figcaption>*@
                                        </div>
                                        <div class="description">
                                            @x.question.Explanation
                                        </div>

                                    </div>
                                </div>
                            </div>
                        

                    </div>
                </div>
                }

