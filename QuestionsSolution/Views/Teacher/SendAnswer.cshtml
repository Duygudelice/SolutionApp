@{
    Layout = null;
}

<div class="line">
    <div>Cevabınızı Gönderin</div>
</div>
<form method="post" class="row" enctype="multipart/form-data">

    <div class="form-group col-md-4">
        <input type="hidden" placeholder="ID" name="QuestionId" value="@ViewBag.deger" readonly="readonly" required />
    </div>
    <div class="form-group col-md-12">
        <label for="name">Cevap Başlığı <span class="required"></span></label>
        <input type="text" id="name" name="AnswerName" class="form-control">
    </div>
    <div class="form-group col-md-12">
        <label for="message">Cevap Açıklaması <span class="required"></span></label>
        <textarea class="form-control" name="Explanation" rows="7" minlength="8" maxlength="800" placeholder="Cevabınızı açıklayıcı bir şekilde yazınız."></textarea>
    </div>
    <div class="form-group col-md-12">
        <label for="Name">Cevap Fotoğrafı Seçiniz.<b>(Zorunlu Değildir.)</b></label> <br />
        <br />
        <input class=" form-control" type="file" name="Answer_picture" />
        <br />
    </div>
    <div class="form-group col-md-12">
        <button class="btn btn-primary">Cevabı Gönder</button>
    </div>
</form>
